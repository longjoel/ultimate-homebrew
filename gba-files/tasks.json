{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Template",
            "type": "shell",
            "command": "cp -R /opt/devkitpro/examples/gba/template/* /app/src",
            "group": {
                "kind": "Setup",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Make",
            "type": "shell",
            "command": "cd /app/src/ && make",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cd /app/src/ && make clean",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}